<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="banner">
      <div class="wrap_logo">
        <%= link_to t("global.app_name"), root_path, class: "logo" %>
      </div>
      <div class="wrap_locale">
        <%= link_to t(".en"), locale:"en" %>
        <%= link_to t(".vi"), locale:"vi" %>
      </div>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_link"), root_path %></li>
        <li><%= link_to t(".help_link"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".list_users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
