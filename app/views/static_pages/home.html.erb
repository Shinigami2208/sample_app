<% provide :title, t(".home_title") %>
<div class="center jumbotron">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <h1><%= t "global.app_name" %></h1>
  <p>
    <%= link_to t(".ruby_on_rails_tutorial"), Settings.tutorial.ruby_on_rails_tutorial %>
  </p>
  <%= link_to t(".sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag(Settings.tutorial.sample_app_logo, alt: "Rails logo", width: "200px"),
"#" %>
